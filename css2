

/* styling for a body tag, applies to everything inside the body of the page */
body {
  font-family: 'Open Sans', sans-serif;
  font-weight: 300;
}

/* this will affect ALL h1 elements */
h1 {
	color: blue;
}

/* an id selector */
#name {
	color: red;
}
#name-container {
	color: green;
}

/* a class selector */
.large-profile-container {
	padding: 0 40%;
}

/* any element with this class will have its text centered */
.text-center {
	text-align: center;
}

/* any element with this class will have its text left aligned */
.text-left {
	text-align: left;
}

/* a box is created */
.card {
	border-style: solid;
	border-width: 1px;
	padding: 10px;
	border-radius: 10px;
}

.story-content {
	font-size: 40px;
}

.center {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 15%;
}
